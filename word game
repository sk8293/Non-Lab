#include <stdio.h>
#include <string.h>
int main(){
    char c='a',s[100];
    int i=1;
    while(i){
        printf("%s's turn: ",(i%2)? "John" : "Peter");
        scanf("%s",s);
        if(s[0]==c){
            c=s[strlen(s)-1];
            i++;
        }
        else{
            printf("Wrong word, %s lost",(i%2)? "John" : "Peter");
            i=0;
        }
    }
    return 0;
}
